{
  "name": "Settings",
  "author": "allie",
  "version": "0.1.0",
  "description": "Core settings for Eterlite.",
  "scope": "eterlite",
  "settings": {
    "accountName": {
      "label": "Account name",
      "description": "Enter your account name here to allow enhanced functionality in plugins.",
      "type": "text",
      "placeholder": "Cowsay41"
    },
    "clientSize": {
      "label": "Client size",
      "description": "Set the exact size of the game client area.",
      "type": "multiInput",
      "inputs": {
        "width": {
          "label": "Width",
          "type": "number",
          "min": 900,
          "default": 900
        },
        "height": {
          "label": "Height",
          "type": "number",
          "min": 600,
          "default": 600
        }
      }
    },
    "rememberWindow": {
      "label": "Save window size and position",
      "description": "If enabled, the window will restore its previous size and position when launching.",
      "type": "toggle",
      "default": true
    },
    "loadingScreenSounds": {
      "label": "Loading screen sound effects",
      "description": "Enables or disables sound effects on the client loading screen.",
      "type": "toggle",
      "default": true
    },
    "cursor": {
      "label": "Custom Cursor",
      "description": "Choose a custom cursor to use within Eterlite.",
      "type": "select",
      "options": [
        {
          "label": "None",
          "value": ""
        },
        {
          "label": "Bloodchrome Broadsword",
          "value": "bcBroad"
        },
        {
          "label": "Bloodchrome Dagger",
          "value": "bcDagger"
        },
        {
          "label": "Bloodchrome Longsword",
          "value": "bcLong"
        },
        {
          "label": "Bone Sword",
          "value": "boneSword"
        },
        {
          "label": "Club",
          "value": "club"
        },
        {
          "label": "Cooked Catfish",
          "value": "cookedCatfish"
        },
        {
          "label": "Cooked Cod",
          "value": "cookedCod"
        },
        {
          "label": "Cooked Eel",
          "value": "cookedEel"
        },
        {
          "label": "Cooked Herring",
          "value": "cookedHerring"
        },
        {
          "label": "Cooked Sardine",
          "value": "cookedSardine"
        },
        {
          "label": "Fishing Rod",
          "value": "fishingRod"
        },
        {
          "label": "Fly Fishing Rod",
          "value": "flyFishingRod"
        },
        {
          "label": "Gold Helm",
          "value": "goldHelm"
        },
        {
          "label": "Ice Sword",
          "value": "iceSword"
        },
        {
          "label": "Iron Club",
          "value": "ironClub"
        },
        {
          "label": "Katalyn's Dagger",
          "value": "katalynsDagger"
        },
        {
          "label": "Orcol's Wrath",
          "value": "orcolsWrath"
        }
      ]
    },
    "enabledPlugins": {
      "default": []
    },
    "enabledTools": {
      "default": []
    },
    "windowBounds": {
      "x": {
        "default": 0
      },
      "y": {
        "default": 0
      },
      "width": {
        "default": 933
      },
      "height": {
        "default": 681
      }
    }
  }
}
